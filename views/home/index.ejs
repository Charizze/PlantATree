<!DOCTYPE html>
<html lang="en">

<!--This tag includes the header section (all relative bootstrap css is in this file-->

<head>
  <% include ../partials/head %>
</head>

<body>
  <!-- Navigation bar partial -->
  <% include ../partials/navbar %>
  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Marketplace</h1>
        <div class="list-group">
          <a href="/search/Tree" class="list-group-item">Trees</a>
          <a href="/search/Shrub" class="list-group-item">Shrubs / Bushes</a>
          <a href="/search/Supply" class="list-group-item">Garding Supplies</a>
          <div class="list-group-item">

            <form onsubmit="window.location = '/search/' + search.value; return false;">
              <div class="row">
              <div class="col">
                <input class="form-control form-control form-control-borderless" id="search"
                  placeholder="Search for items" type="search" name="search" required></input>
              </div>
              <div class="col-auto">
                <button class="btn btn-sm btn-success" type="submit">Search</button>
              </div>
              </div>

            </form>
          </div>
        </div>



      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">
        <p class="text-center display-3">Featured Products</p>

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="/images/homepage/home-page-1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="/images/homepage/home-page-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="/images/homepage/home-page-3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row">

          <% for(var j = 0; j < 6; j++ ) { %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="#"><img class="card-img-top" src="/images/<%= img[j].title %>" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#"><%= results[j].name %></a>
                </h4>
                <h5>$<%= results[j].price%></h5>
                <p class="card-text"><%= results[j].desc%></p>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
          <%}%>

        
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

<!--This tag includes the footer section (adds the footer template to the page)-->
<% include ../partials/footer.ejs%>

</body>

</html>