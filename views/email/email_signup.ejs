<!-- email_signup.ejs allows a user to input their email to signup to the mailing list -->
<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <title>Newsletter Signup</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>

<body>
    <% include ../partials/navbar %>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

        <p><%= alertMsg %></p>
        <br>

        <p>Enter your email to sign up to our Plant A Tree newsletter service.</p>
        <br>
            
        <form action="/newsletter" method="post">
            <div class="form-group">
                <label>Email Address</label>
                <br>
                <input type="text" name="email_input" id="email_input">
                <br><br>
                <input type="submit" value="Submit">
            </div>
        </form>
        <hr>
        <p>Need an account <a href="/signup">Register</a></p>
        <p>Go Back <a href="/">Home</a>.</p>
    </div>
</body>

</html>