<!DOCTYPE html>
<html>
    <head>
        <title>Plant-A-Tree | Store</title>
        <meta name="description" content="This is the description">
        <% include ../partials/head %>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script type="text/javascript" src="store.js" async></script>
        <link rel="stylesheet" href="stylesheets/cartstyle.css">
    </head>
    <body>
        <% include ../partials/navbar %>
        <main>
                <div class="basket">
                  <% if (rows.length  === 0) { %>
                    <p>There is nothing in the cart</p>
                  <% } %>
                  <% for(var i =0; i < rows.length; i++) { %>
                    <div class="basket-product">
                      <div class="item">
                        <div class="product-image" >
                            <a href="/product/<%= rows[i].idProduct %>"><img src="/images/<%= rows[i].image %>" alt="Apple Tree" class="product-frame"></a>
                        </div>
                        <div class="product-details">
                          <h1><strong><span class="item-quantity"></span><%= rows[i].product_name %></strong> </h1>
                          <p><strong>Age? Size?</strong></p>
                          <p>Identification tag: <%= rows[i].idProduct %></p>
                        </div>
                      </div>
                      <div class="price"><%= rows[i].product_price %></div>
                      <div class="quantity">
                        <input type="number" value="1" min="1" class="quantity-field">
                      </div>
                      <div class="subtotal"><%= rows[i].product_price %></div>
                      <div class="remove">
                        <button>Remove</button>
                      </div>
                    </div>
                  <% } %>
                </div>
                <aside>
                  <div class="summary">
                    <div class="summary-total-items"><span class="total-items"></span> Items in your Bag</div>
                    <div class="summary-subtotal">
                      <div class="subtotal-title">Subtotal</div>
                      <div class="subtotal-value final-value" id="basket-subtotal">130.00</div>
                      <div class="summary-promo hide">
                        <div class="promo-title">Promotion</div>
                        <div class="promo-value final-value" id="basket-promo"></div>
                      </div>
                    </div>
                    <div class="summary-delivery">
                      <select name="delivery-collection" class="summary-delivery-selection">
                          <option value="0" selected="selected">Select Collection or Delivery</option>
                         <option value="collection">Collection</option>
                         <option value="first-class">Royal Mail 1st Class</option>
                         <option value="second-class">Royal Mail 2nd Class</option>
                         <option value="signed-for">Royal Mail Special Delivery</option>
                      </select>
                    </div>
                    <div class="summary-total">
                      <div class="total-title">Total</div>
                      <div class="total-value final-value" id="basket-total">130.00</div>
                    </div>
                    <div class="summary-checkout">
                      <button class="checkout-cta">Go to Secure Checkout</button>
                    </div>
                  </div>
                </aside>
              </main>
              <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

        <% include ../partials/footer.ejs%>

    </body>
   
</html>